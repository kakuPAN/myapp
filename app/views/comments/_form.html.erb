<div class="comments-comment-form"  id="comment-form">
  <%= form_with model: [board, comment], data: {turbo_method: :post}, remote: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.text_area :body, class: "form-control" %>
    <%= f.submit "コメントを送信" %>
  <% end %> 
</div>
