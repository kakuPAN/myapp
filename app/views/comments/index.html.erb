<div class="index-board-container">
  <div class="index-board-image">
    <% if board_image(@board) %>
      <%= image_tag board_image(@board).image %>
    <% else %>
      <%= image_tag "dev_images/tree_image.jpeg" %>
    <% end %>
  </div>
  <div class="index-board-content">
    <div class="index-board-title">
      <%= link_to board_path(@board) do %>
        <%= @board.title %>
      <% end %>
    </div>
    <div class="index-board-body">
      <% if @board.frames.empty? %>
        コンテンツがありません
      <% else %>
        <%= @board&.frames&.order(:frame_number).first.body %>
      <% end %>
    </div>
  </div>
</div>

<div class="comments-comment-form-container">
  <div class="comments-comment-form">
    <%= form_with model: [@board, @comment], local: true do |f| %>
      <%= f.text_area :body, class: "form-control" %>
      <div>
        <%= f.submit "コメントを送信" %>
      </div>
    <% end %> 
  </div>
</div>
<% @comments.each do |comment| %>
  <div class="reply-container">
    <div class="reply-label">
      <%= link_to user_path(comment.user_id) do %>
        <% if comment.user.avatar_image.attached? %>
          <%= image_tag comment.user.avatar_image, class: "avatar-image" %>
        <% else %>
          <i class="bi bi-person-circle avatar-icon"></i>
        <% end %>
        <div class="to-comment-user"><%= comment.user.user_name %></div>
      <% end %>
      <div class="to-comment"><%= comment.body %></div>
      <div class="reply-wrapper">
        <% comment.replies.each do |reply| %>
          <%= link_to user_path(reply.user_id) do %>
            <% if reply.user.avatar_image.attached? %>
              <%= image_tag reply.user.avatar_image, class: "avatar-image" %>
            <% else %>
              <i class="bi bi-person-circle avatar-icon"></i>
            <% end %>
            <div class="to-comment-user"><%= reply.user.user_name %></div>
          <% end %>
          <div class="to-comment"><%= reply.body %></div>
        <% end %>
      </div>
      <div class="to-comment-label" id="to-comment-<%= comment.id %>">このコメントに返信</div>
    </div>
    <div class="reply-form-container" id="reply-form-<%= comment.id %>">
      <div class="reply-form">
        <%= form_with model: [@board, comment, @reply] do |f| %>
          <%= f.text_area :body %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<div>
  <% if @comments.present? && @comments.current_page %>
    <div class="page-numbers">
      <%= paginate @comments %>
    </div>
  <% else %>
    <p>表示するデータがありません。</p>
  <% end %>
</div>

<script>
  document.addEventListener("turbo:load", function () {
  const toComments = document.querySelectorAll("[id^='to-comment-']");
    toComments.forEach(container => {
      const commentNumber = container.id.replace("to-comment-", "");
      const replyForm = document.getElementById(`reply-form-${commentNumber}`);
      if (container && replyForm) {
        container.addEventListener("click", function(e){
          e.stopPropagation(); 
          replyForm.style.display = "block";
        });
        document.addEventListener("click", function(e){
          replyForm.style.display = "none";
        });
        replyForm.addEventListener("click", function(e){
          e.stopPropagation(); 
        });
    }});
  });
</script>

