<div class="edit-password-title">
  新しいパスワードを入力して下さい。
</div>
<div class="edit-password-container">
  <%= form_with model: @user, url: update_password_reset_password_resets_path(token: params[:token]), data: { turbo_method: :patch}, local: true do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "新しいパスワード",required: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "パスワードをリセット", class: "btn btn-primary" %>
    </div>
    <div class="form-group">
      <%= link_to "キャンセル", login_path, class: "btn btn-outline-danger" %>
    </div>
  <% end %>
</div>
<style>
  .edit-password-title {
    text-align: center;
    margin: 20px 0;
  }
  .edit-password-container {
    width: 60%;
    max-width: 600px;
    margin: auto;
    min-width: 300px;
  }
  .edit-password-container .form-group {
    margin-top: 10px;
  }
  .edit-password-container .form-group input {
    font-size: 20px;
  }
  .edit-password-container .form-group input[type="submit"] {
    width: 100%;
  }
  .edit-password-container .form-group a {
    width: 100%;
    font-size: 20px;
    text-align: center;
  }
</style>
