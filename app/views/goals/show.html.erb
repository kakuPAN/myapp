<div class="whole-wrapper">
  <div class="index-10">
    <% if current_user %>
      <%= render "shared/goal_related_header" %>
    <% end %>
    <div class="title-wrapper content-1">
      <h1 class="goal-title"><%= @goal.title %></h1>
    </div>
  </div>
  <div class="wrapper content-2 index-1">
      <%= turbo_frame_tag "landmarks-page-#{@landmarks.current_page}" do %>
        <%# 今のページで取得したTweet一覧 %>
          <%= render @landmarks %>
        <%# 遅延読み込みで次ページを取得する`<turbo-frame>` %>
          <%= turbo_frame_tag "landmarks-page-#{@landmarks.next_page}", loading: :lazy, src: path_to_next_page(@landmarks) %>
      <% end %>
  </div>
</div>
<style>
  .index-10 {
    z-index: 10;
  }
  .index-1 {
    z-index:1;
  }
  .whole-wrapper {
  
  }
   .wrapper {
    overflow: auto;
    scroll-snap-type: y mandatory;
    height: 100vh;
    width: 60%;
    margin: auto;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  <%# 全画面の方のスクロールがずれていると、エリアのスクロールがうまくいかないことがある　#%>
  .wrapper::-webkit-scrollbar {
    display:none;
  }
  .scroll-area {
    scroll-snap-align: start;
    height: 100vh;
    text-align: center;
    margin: 20px;
    padding-bottom: 10%;
    overflow: hidden;
    position: relative;
  }

  .title-wrapper {
    text-align: center;
  }
  .goal-title {
    font-size: 50px;
  }
  .current-height {
    font-size: 50px;
    border-bottom: solid;
    border-color: blue;
  }
  
  .content-1 {
    padding-top: 10px;
    z-index: 10
  }

  .content-2 {
    z-index: 1
  }
  .landmark-image {
    width: 100%;
    height: 100%;
    padding-top: 100px;
    padding-bottom: 100px;
    padding-left: 50px;
    padding-right: 50px;
  }
</style>