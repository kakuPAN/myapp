<% if current_user %>
  <%= render "shared/header" %>
<% end %>
<div class="title-wrapper">
  <h1 class="goal-title"><%= @goal.title %></h1>
  <h1 class="current-height">積み上げた高さ：<%= @height.current_height %>
    <% if @height.thing? %>
      m
    <% end %>
  </h1>
</div>

<% if @landmarks.present? %>
  <div class="wrapper">
    <% @landmarks.each do |landmark| %>
      <div class="scroll-area">
        <div class="content-1">
          <h2 class="landmark-name"><%= landmark.name %></h2>
          <p>高さ: <%= landmark.setting_height %>
            <% if landmark.thing? %>
              <span>m</span>
            <% end %>
          </p>
        </div>
        <div class="content-2">
          <%= image_tag landmark.landmark_image, class: "landmark-image" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>該当するランドマークはありません。</p>
<% end %>


<style>

   .wrapper {
    overflow: auto;
    scroll-snap-type: y mandatory;
    height: 100vh;
    width: 90%;
    margin: auto;
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .wrapper::-webkit-scrollbar {
    display:none;
  }
  .scroll-area {
    scroll-snap-align: start;
    height: 100vh;
    text-align: center;
    margin: 10px;
    overflow: hidden;

  }

  .title-wrapper {
    text-align: center;
  }
  .goal-title {
    font-size: 50px;
  }
  .current-height {
    font-size: 50px;
    border-bottom: solid;
    border-color: blue;
  }
  
  .content-1 {
    padding-top: 10px;
    z-index: 10
  }
