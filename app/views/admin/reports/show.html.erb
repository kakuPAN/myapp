<div class="admin admin-container">
  <div class="admin-content">
    <div class="admin-title">
      <div class="sub-title">
        <%= link_to admin_board_path(@board), class: "cell-link" do %>
          <%= @board.title %>
        <% end %>
      </div>
      <div class="sub-title">
        <%= link_to admin_reports_path(board_id: @board.id), class: "cell-link" do %>  
          報告一覧
        <% end %>
      </div>
      <div class="sub-title">報告詳細</div>
    </div>
    <div class="user-profile-container">
      <div class="user-profile-row">
        <span class="label">ID:</span>
        <span class="value"><%= @report.id %></span>
      </div>
      <div class="user-profile-row">
        <span class="label">ユーザー名:</span>
        <span class="value">
          <%= link_to admin_user_path(@report.user), class: "cell-link" do %>
            <%= @report.user.user_name %>
          <% end %>
        </span>
      </div>
      <div class="user-profile-row">
        <span class="label">対象</span>
        <span class="value">
          <% if @report.comment %>
            <%= link_to admin_board_comment_path(@report.comment), class: "cell-link" do %>
              コメント
            <% end %>
          <% else %>
            <%= link_to admin_board_path(@report.board), class: "cell-link" do %>
              トピック
            <% end %>
          <% end %>
        </span>
      </div>
      <div class="user-profile-row">
        <span class="label">報告理由</span>
        <span class="value"><%= @report.body %></span>
      </div>
      <div class="user-profile-row">
        <span class="label">報告日時:</span>
        <span class="value"><%= @report.created_at.strftime('%Y-%m-%d %H:%M:%S') %></span>
      </div>
    </div>
    <%= link_to "報告を削除", admin_report_path(@report, board_id: @board.id), data: { turbo_method: :delete}, class: "btn btn-outline-danger", id: "delete-report-button" %>
  </div>
</div>

