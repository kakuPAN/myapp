<div class="login-container">
  <%= form_with url: login_path do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", id: "session-email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード", id: "session-password" %>
    </div>
    <div class="form-group">
      <%= f.submit "ログイン", class: "form-control btn btn-primary", id: "login-submit" %>
    </div>
  <% end %>
</div>

<div class="recommend-link">
  <%= link_to "パスワードを忘れた方", new_password_reset_path, id: "forget-password-link" %>
</div>
<div class="recommend-link">
  <p>アカウントをお持ちではない方は<%= link_to "こちら", new_user_path, id: "create-user-link" %></p>
</div>

<style>
  .login-container {
    width: 60%;
    max-width: 600px;
    margin: auto;
    margin-top: 100px;
  }
  .login-container .form-group {
    margin-top: 10px;
  }
  .login-container .form-group input {
    font-size: 20px;
  }

</style>
<style>
  .line-login {
    display: flex;
    justify-content: center;
    margin: auto;
    width: 200px;
    background: #f7f5f5;
    border: 2px solid #ddd;
  }
  .or-login {
    text-align: center;
    font-size: 20px;
    margin: 20px 0px;
  }
  .line-login span {
    margin: auto;
    font-weight: bold;
    color: #333;
  }
  .line-login .line-icon {
    display: flex;
    align-items: center;
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
    margin: auto;
  }
  .line-icon img {
    width: 40px;
    height: 40px;
   }

   .recommend-link {
    margin: 50px;
    text-align: center;
  }

</style>
