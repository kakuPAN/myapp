<div class="login-container">
  <%= form_with url: login_path do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", id: "session-email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード", id: "session-password" %>
    </div>
    <div class="form-group">
      <%= f.submit "ログイン", class: "form-control btn btn-primary", id: "login-submit" %>
    </div>
  <% end %>
</div>

<div class="recommend-link">
  <%= link_to "パスワードを忘れた方", new_password_reset_path, id: "forget-password-link" %>
</div>
<div class="recommend-link">
  <p>アカウントをお持ちではない方は</p>
  <%= link_to "こちら", new_user_path, id: "create-user-link" %>
</div>
