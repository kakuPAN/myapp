<% if @context %>
  <%= render "replies/new", board: @board, comment: @reply_comment, reply: @reply %>
  <div class="background-cover"></div>
<% end %>
<div class="wrapper">
  <%= render @board %>
</div>

<div class="board-container">
  <div class="create-board">
    <%= link_to new_board_path(parent_board: @board.id) do %>
      <i class="bi bi-plus-square"></i>
    <% end %>
  </div>
  <% @boards.each do |board| %>
    <div class="board-thumbnail-wrapper" id="board-thumbnail-wrapper-<%= @boards.index(board)+1 %>">
      <%= link_to board_path(board) do %>
        <div class="board-thumbnail-container" id="board-thumbnail-container-<%= @boards.index(board)+1%>">
          <div class="board-thumbnail">
            <% if !board.frames.empty? %>
              <% first_frame = board.frames.order(:frame_number).first %>
              <% if first_frame.image.attached? %>
                <%= image_tag first_frame.image %>
              <% else %>
                <div class="board-thumbnail-text"><%= simple_format(first_frame.body) %></div>
              <% end %>
            <% else %>
              <p>まだコンテンツがありません</p>
            <% end %>
          </div>
        </div>
        <div class="board-content <%= board_color(board) %>" id="board-content-<%= @boards.index(board)+1%>">
          <%= board.title %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<%= render "shared/breadcrumb", breadcrumb: @breadcrumb %>

<!-- ボードサムネイル表示用 -->
<script>
  document.addEventListener("turbo:load", function () {
  const boardContainers = document.querySelectorAll("[id^='board-content-']");
    boardContainers.forEach(container => {
      const boardNumber = container.id.replace("board-content-", "");
      const thumbnail = document.getElementById(`board-thumbnail-container-${boardNumber}`);
      const thumbnailWrapper = document.getElementById(`board-thumbnail-wrapper-${boardNumber}`);
      if (container && thumbnail) {
        container.addEventListener("mouseover", () => {
            thumbnail.style.display = "block";
          })
      }
        thumbnailWrapper.addEventListener("mouseout", () => {
            thumbnail.style.display = "none";
        });
    });
  });
</script>
