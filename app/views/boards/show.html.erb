    const commentCount = comments.length;
    const totalHeight = commentTrack.offsetHeight;
    const speed = 50;
    
    let duration, endTranslate
    endTranslate = 550
    duration = endTranslate / speed
    commentTrack.style.setProperty("--end-translate", `${endTranslate}px`);
