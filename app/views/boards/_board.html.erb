<div class="scroll-content">
  <div class="container">
    <% @frames.each do |frame| %>
      <div class="section">
        <div class="frame-number">
          <% total_number = @frames.size %>
          <% current_number = @frames.index(frame) + 1 %>
          <p><%= current_number %>／<%= total_number%></p>
        </div>
        <div class="board-body">
          <% if frame.image.attached? %>
            <%= image_tag frame.image %>
          <% else %>
            <div class="board-body-text"><%= simple_format(frame.body) %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="board-title-label <%= board_color(board) %>">
    <%= @board.title %>
    <div class="delete-edit-button">
      <%= link_to board_path(board), data: { turbo_method: :delete }, class: "delete-button" do %>
        <i class="bi bi-trash3-fill"></i>
      <% end %>
      <%= link_to edit_board_path(board), class: "edit-button" do %>
        <i class="bi bi-pencil-fill"></i>
      <% end %>
    </div>
  </div>
</div>
<div class="comment-area-wrapper">
  <div class="comment-area-label <%= board_color(board) %>">
    みんなのコメント
  </div>
  <div class="comment-area">
    <div class="comment-track" id="comment-track"> <%# 自分・投稿主のコメントにはマークをつける%><%#コメントに対する返信もできるようにする%><%# フォロー中のユーザーのコメントは強調表示 %>
      <% board.comments.each do |comment| %>
        <%= link_to board_comments_path(board), class: "comment-link" do %>
          <div id="reply-form-<%= comment.id %>"></div> <!-- リプライフォームを挿入する場所 -->
          <% comment_class_name = comment_class_name(comment) %>
          <div class="comment-wrapper">
            <div class="comment-avatar">
              <% if comment.user.avatar_image.attached? %>
                <%= image_tag comment.user.avatar_image, class: "avatar-image" %>
              <% else %>
                <i class="bi bi-person-circle avatar-icon"></i>
              <% end %>
              <div class="commented-user"><%= comment.user.user_name %></div>
            </div>
            <div class="comment-text <%= comment_class_name %>">
              <%= simple_format(comment.body) %>
            </div>
          </div>
          <% if comment.replies.any? %>
            <div class="replies-wrapper">
              <% comment.replies.order(:created_at).each do |reply| %>
                <div class="reply-wrapper">
                  <% reply_class_name = reply_class_name(reply) %>
                  <div class="reply-avatar">
                    <% if reply.user.avatar_image.attached? %>
                      <%= image_tag reply.user.avatar_image, class: "avatar-image" %>
                    <% else %>
                      <i class="bi bi-person-circle avatar-icon"></i>
                    <% end %>
                    <div class="replied-user"><%= reply.user.user_name %></div>
                  </div>
                  <div class="reply-text <%= reply_class_name %>">
                    <%= simple_format(reply.body) %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <% if board.comments.empty? %>
        <span class="comment-text">盛り上げよう！</span>
        <div class="comment-image"><%= image_tag "free_images/sakura.png"%></div><%# 画像などもコメントできるようにしたい%>
        <span class="comment-text">コメントやリアクションをして</span>
        <span class="comment-text">関心のある投稿には</span>
      <% end %>
    </div>
  </div>
  <div class="comment-form-wrapper">
    <div class="comment-form"> <%# 自分・投稿主のコメントにはマークをつける%><%#コメントに対する返信もできるようにする%>
      <%= form_with model: [board, @comment], local: true do |f| %>
        <%= f.text_area :body, class: "form-control" %>
        <div>
          <%= f.submit "コメントを送信", class: "submit #{board_color(board)}" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>

<style>
.container {
	overflow: auto;
	scroll-snap-type: y mandatory;
	height: 80%;
  width: 100%;
  position: absolute;
  top:10%;
  margin: auto;
  z-index: 1;
}
.section {
	scroll-snap-align: start;
	height: 100%;
  border: 2px solid #ddd;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 100px;
  position: relative;
}
.frame-number {
  font-size: 20px;
  position: absolute;
  top: 10px;
  right: 10px;
  background: #ddd;
  height: 30px;
  padding: 2px 5px;
  text-align: center;
  border-radius: 50%;
  opacity: 0.6;
}
.board-body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: left;
  width: 100%;
  height: 100%;
}
.board-body-text {
  text-align: left;
  padding: 0 10px;
  font-size: 28px;
}
.board-body-text p {
  word-break: break-word;
  overflow-wrap: break-word; <%# 折り返しに必要 %>
}
.board-body img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  margin: auto;
  display: block;
}
.create-board {
  width: 100px;
  text-align: center;
}
.create-board i {
  font-size: 50px;
}
</style>

<style>
.replies-wrapper {
  margin-left: 20px;
  border-left: 2px solid #ddd;
}
.reply-wrapper {
  margin-bottom: 10px;
}
.comment-text, .reply-text {
  display: block;
  margin: 20px;
  font-size: 20px;
}
.comment-text {
  color: black;
}
.reply-text {
  color: #555;
}
.comment-avatar, .reply-avatar {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  width: 100%;
  overflow: hidden;
  margin: 20px;
}
.commented-user, .replied-user {
  font-size: 20px;
  color: black;
  margin-left: 10px;
}
.avatar-image {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  object-fit: cover;
}
.avatar-icon {
  font-size: 40px;
  color: #aaa;
}

</style>