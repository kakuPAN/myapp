<%= form_with model: board do |f| %>
  <div class="new-board-form">
    <%= render "shared/error_messages", object: f.object %>
    <%= f.text_area :title, class: "form-control", onkeyup: "BoardShowLength(value);" %>
    <p id="inputlength">0文字/100文字</p>
    <%= f.hidden_field :parent_id, value: parent_board.id %>
    <%= f.submit "新しいトピックを作成", class: "form-control btn btn-primary", id: "create-new-board", disabled: true %>
    <%= link_to "キャンセル", board_path(parent_board), class: "cancel btn btn-outline-danger" %>
  </div>
<% end %>
