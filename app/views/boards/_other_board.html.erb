<div class="card-area <%= 'current-board' if board.id == current_board.id %>">
  <%= link_to board_path(board, page: params[:page]) do %>
    <div class="card-content card-image">
      <% if board.image.attached? %>
        <%= image_tag board.image %>
      <% end %>
    </div>
    <div class="card-content card-body">
      <%= board.body %>
    </div>
    <div class="card-content card-comment-area">
      <div class="card-comment-track"> <%# 自分・投稿主のコメントにはマークをつける%><%#コメントに対する返信もできるようにする%>
        <% board.comments.each do |comment| %>
          <% if current_user && current_user.id == comment.user_id %>
            <span class="card-comment-text comment_by_other_user"><i class="bi bi-emoji-sunglasses-fill"></i><%= comment.body %></span>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

