<%= render "shared/header" %>
<h1>New board</h1>
<%= render "shared/error_messages", object: @board %>
<%= form_with model: @board do |f| %>
  <div class="mb-3">
    <%= f.label :body, "内容", class: "form-label" %>
    <%= f.text_area :body, size: "10x5", class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>
  </div>
  <% if @board.image.attached? %>
    <%= link_to "画像を削除", delete_image_board_path, data: { turbo_method: :delete } %>
  <%end%>
  <div class="mb-3">
  <%= f.submit "作成", class: "form-control btn btn-primary" %>
  </div>
<% end %> 
