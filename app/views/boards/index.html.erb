<div class="whole-wrapper">
  <div class="header-wrapper">
    <% if current_user %>
      <%= render "shared/header" %>
    <% end %>
  </div>
  <div class="wrapper">
    <%= render @boards %>
    <div class="pagination-left">
      <% if @boards.present? && @boards.current_page %>
        <% if @boards.prev_page %>
          <%= link_to  url_for(page: @boards.prev_page || 1) do %>
            <div class="previous-link"></div>
          <% end %>
        <% else %>
          <div class="previous-link disabled"></div>
        <% end %>
    </div>
        <%= paginate @boards %>
    <div class="pagination-right">
        <% if @boards.next_page %>
          <%= link_to url_for(page: @boards.next_page || @boards.total_pages) do %>
            <div class="next-link"></div>
          <% end %>
        <% else %>
          <div class="next-link disabled"></div>
        <% end %>
      <% else %>
        <p>ページネーションを表示するデータがありません。</p>
      <% end %>
    </div>
  </div>
</div>
