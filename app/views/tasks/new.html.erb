<%= render "shared/goal_related_header" %>
<h1>New Task</h1>
<%= render "shared/error_messages", object: @task %>
<%= form_with model: [@goal, @task] do |f| %>
    <div class="mb-3">
      <%= f.label :title, "タイトル", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :body, "内容", class: "form-label" %>
      <%= f.text_area :body, size: "10x5", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :deadline, "期限", class: "form-label" %>
      <%= f.datetime_field :deadline, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.radio_button :access_level, "private_access" %>非公開<%= f.radio_button :access_level, "public_access" %>公開
    </div>
  <div class="mb-3">
    <%= f.submit "作成", class: "form-control btn btn-primary" %>
  </div>
<% end %>
