<%= search_form_for @q, url: tasks_path do |f| %>
  <%= f.search_field :user_user_name_or_title_or_body_cont, placeholder: "タスクを検索" %>
  <%= f.select :progress_status_eq, Task.progress_statuses_i18n.invert.map { |key, value| [ key, Task.progress_statuses[value] ] }, { include_blank: "未選択" } %>
  <%= f.submit "検索" %>
<% end %>

<style>
  input[type="search"] {
        width: 300px;
    }
</style>
