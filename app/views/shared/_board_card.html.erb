<div class="card-area">
  <%= link_to board_path(board) do %>
    <% frame = board&.frames&.order(:frame_number).first %>
    <% if frame&.image&.attached? %>
      <div class="card-content card-image">
        <%= image_tag frame.image %>
      </div>
    <% end %>
    <div class="card-content card-body <%= "no-image" unless frame&.image&.attached? %>">
      <%= board.title %>
    </div>
  <% end %>
</div>

<style>
 
  * {
    /*outline: 2px solid blue;*/
    scrollbar-width: none;
  }
   

.card-area {
  position: relative;
  overflow: hidden; /* 画像がスライドしてもカード外に出ないようにする */
  width: 300px; /* カードの幅を指定 */
  height: 400px; /* カードの高さを指定 */
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 20px;
}
.card-area.current-board {
  background-color: rgb(173, 173, 173);
}
.card-area.current_board {
  border: 5px solid pink;
}
.card-area.current_board img {
  display: none;
}

.card-content.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: transform 1s ease; /* トランジションをスムーズに */
  z-index: 100; /* 本文より前面に表示 */
}

.card-content.card-image img {
  width: 100%; /* 画像の幅をカードに合わせる */
  height: 100%; /* 画像の高さをカードに合わせる */
  object-fit: cover; /* カードの枠内で画像を中央に切り取り */
  object-position: center; /* 画像の中心を基準に配置 */
  display: block; /* 不要な余白を排除 */
  }

.card-content.card-body {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.9); /* 背景を白で半透明に */
  z-index: 0; /* 画像の下に配置 */
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 16px;
  box-sizing: border-box;
  overflow: hidden;
  opacity: 0; /* 初期状態では非表示 */
  transition: opacity 0.5s ease; /* 本文の表示をスムーズに */
}

.card-area:hover .card-content.card-image {
  transform: translateY(-200%); /* 画像を上にスライド */
}

.card-area.current-board a {
  pointer-events: none; /* current-board ではリンクを無効化 */
}
.card-area.current-board:hover .card-content.card-image {
  transform: none; /* current-board ではホバーを無効化 */
}

.card-area.current-board .card-content.card-image img {
  opacity: 0.2;
}

.card-area:hover .card-content.card-body {
  opacity: 1; /* 本文を表示 */
}

.card-content.card-body.no-image {
  opacity: 1;
  transition: none;
}

</style>
