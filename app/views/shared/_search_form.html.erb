<%= search_form_for @q, url: boards_path do |f| %>
  <%= f.search_field :title_cont, placeholder: "ルートを検索" %>
  <%= f.submit "検索" %>
<% end %>

<!-- 検索フォーム -->
<style>
  .search-form-container input[type="search"] {
    height: 40px;
    }
  .search-form-container input[type="submit"] {
    height: 40px;
    background: #ff701e;
    border: 2px solid #ff701e;
    border-radius: 8px;
    color: #fff;
    font-weight: bold;
    text-align: center;
    background: linear-gradient(90deg, rgba(255,112,30,1) 0%, rgba(255,191,48,1) 50%, rgba(255,77,48,1) 100%);
    background-size: 200% 100%;
    border: none;
    transition: .4s cubic-bezier(0.37, 0, 0.63, 1);
    }
  .search-form-container input[type="submit"]:hover {
    background: #fff;
    color: #ff701e;
    letter-spacing: 0.15em;
  }
</style>
