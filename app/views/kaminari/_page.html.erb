<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, class: "page-link", data: { remote: remote }, rel: page.rel do %>
      <%= page %>
    <% end %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to url, remote: remote, rel: page.rel, class: "page-link" do %>
      <%= page %>
    <% end %>
  </li>
<% end %>

<style>
  nav > .pagination {
    display: flex;
    justify-content: center;
  }
  .page-item .page-link {
    margin: 10px;
    background: #ff701e;
    border-radius: 8px;
    color: #fff;
    font-weight: bold;
    border: none;
    box-shadow: inset 0 -5px 8px rgba(0, 0, 0, 0.2);
  }
  .page-item .page-link {
    background: #666;
    color: #fff;
  }
  .page-item.active .page-link {
    background: linear-gradient(90deg, rgba(255,112,30,1) 0%, rgba(255,191,48,1) 50%, rgba(255,77,48,1) 100%);
    background-size: 200% 100%;
    border: none;
  }
  .page-item:not(.active) .page-link:hover {
    background: #fff;
    color: #ff701e
  }
</style>
