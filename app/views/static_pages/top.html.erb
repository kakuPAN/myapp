<h1>トップページ</h1>

<% @users.each do |user| %>
  <% if current_user == user %>
    <h3><%= user.user_name %></h3>
  <% else %>
    <p><%= user.user_name %></p>
  <% end %>
<%end%>
<% unless logged_in? %>
  <%= link_to "ユーザー作成", new_user_path %>
<% end %>

<%= link_to "ホームページ", home_pages_path %>
<% if current_user %>
  <%= link_to 'ログアウト', logout_path, data: { turbo_method: :delete } %>
<% else %>
  <%= link_to "ログイン", login_path %>
<% end %>
