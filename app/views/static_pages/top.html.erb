<div class="title-board-container">
  <div class="title-container">
    <div class="title-text">Follow the Roots</div>
    <a href="https://lin.ee/ptXYQmj"><img src="https://scdn.line-apps.com/n/line_add_friends/btn/ja.png" alt="友だち追加" height="36"></a>
    <%= link_to 'LINEでログインorユーザー登録', auth_at_provider_path(provider: :line) %>
  </div>
  <%= render "shared/search_form" %>
  <% @boards.each do |board| %>
    <%= link_to board_path(board) do %>
      <div class="title-board-content anim-box poyopoyo <%= board_color(board) %>" id= "title-board-content-<%= board.id%>">
        <%= board.title %>
      </div>
    <% end %>
  <% end %>
</div>

<style>
  * {
    /*outline: 2px solid blue;*/
    scrollbar-width: none;
  }
  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  <%# カラーの部分はshowに同じものあり%>
  .board-container .board-content.red, .board-title-label.red, .comment-form .submit.red, .comment-area-label.red, .title-board-content.red {
    background: #F4ADB0;
  }
  .board-container .board-content.green, .board-title-label.green, .comment-form .submit.green, .comment-area-label.green, .title-board-content.green {
    background: #C9E2C7;
  }
  .board-container .board-content.blue, .board-title-label.blue, .comment-form .submit.blue, .comment-area-label.blue, .title-board-content.blue {
    background: #ABECF2;
  }
  .board-container .board-content.brown, .board-title-label.brown, .comment-form .submit.brown, .comment-area-label.brown, .title-board-content.brown {
    background: #EFDDAA;
  }
  .board-container .board-content.emerald, .board-title-label.emerald, .comment-form .submit.emerald, .comment-area-label.emerald, .title-board-content.emerald {
    background: #E4EDAA;
  }

  .title-text {
    font-size:80px;
  }
  .background-image img {
    width: 1000px;
  }
  .title-board-container {
    max-height: 100vh;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    padding: 10px;
    width: 100%;
    box-sizing: border-box;
  }
  .title-board-container .title-board-content {
    border-radius: 10px;
    padding: 10px;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
    font-size: 20px;
    font-weight: bold;
  }
  .title-board-container a { 
    color: black;
    text-decoration: none;
  }


  @media (max-width: 768px) {
    .board-content {
      width: calc(50% - 20px);
    }
  }

  @media (max-width: 480px) {
    .board-content {
      width: 100%;
    }
  }
  .anim-box.poyopoyo {
  animation: poyopoyo 5s ease-out infinite;
  opacity: 1;
  }
  @keyframes poyopoyo {
    0%, 40%, 60%, 80% {
      transform: scale(1.0);
    }
    50%, 70% {
      transform: scale(0.95);
    }
  }
</style>
