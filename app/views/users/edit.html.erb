<%= render "shared/header" %>
<div class="form-label">
    <span>プロフィール編集</span>
</div>
<%= render "shared/error_messages", object: @user %>
<div class="form-wrapper">
  <div class="form-container">
    <%= form_with model: @user do |f| %>
      <div class="preset-preview-container">
        <div id="preset-post_images" style="">
          <div id="preset-preview">
            <% if @user.avatar_image.attached? &&
                  @user.avatar_image.attachment.blob.present? &&
                  @user.avatar_image.attachment.blob.persisted? %>
                  <div class="image-label">設定中の画像</div>
                  <%= image_tag @user.avatar_image %>
            <% else %>
              <%= image_tag "images.jpeg" %>
            <% end %>
          </div>
        </div>
      </div>
      
      
      <div class="preview-container">
        <div id="post_images" style="display: none;">
          <div class="image-label" id="new-image-label">追加した画像</div>
          <div id="preview"></div>
        </div>
      </div>
      <div class="mb-3">
        <%= f.file_field :avatar_image, id: "avatar-image", onchange: "loadImage(this); checkImage();" %>
      </div>
      <div class="mb-3">
        <%= f.text_field :user_name, maxlength: 20, id: "user-name", class: "form-control", placeholder: "ユーザーネームを入力してください", onkeyup: "ShowUserNameLength(value);" %>
        <p id="username-length"><%= @user.user_name.length %>文字/20文字</p>
      </div>
      <div class="mb-3">
        <%= f.text_area :profile, maxlength: 250, class: "form-control", placeholder: "自己紹介を入力してください", onkeyup: "ShowProfileLength(value);" %>
        <p id="profile-length"><%= @user&.profile&.length %>文字/250文字</p>
      </div>
      
      <div class="mb-3">
        <%= f.submit "変更を保存", class: "form-control btn btn-outline-primary",id: "submit-button", disabled: true %>
      </div>
    <% end %>
  </div>
  <div class="cancel-button">
      <%= link_to "キャンセル", show_profile_user_path(@user),class: "cancel btn btn-outline-danger" %>
  </div>
</div>

