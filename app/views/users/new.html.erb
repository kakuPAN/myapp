<div class="user-create-form-container">
  <%= form_with model: @user do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.text_field :user_name, class: "form-control", placeholder: "ユーザーネーム" %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワード確認" %>
    </div>
    <div class="form-group">
      <%= f.select :security_question_id,
          options_from_collection_for_select(SecurityQuestion.all, :id, :question_text),
          class: "form-control" %>
      <%= f.text_field :security_answer, class: "form-control", placeholder: "秘密の質問の答え" %>
    </div>
    <%= f.submit "登録", class: "form-control btn btn-primary" %>
  <% end %>
</div>

<div class="recommend-link">
  <p>アカウントをお持ちの方は<%= link_to "こちら", login_path %></p>
</div>

<style>
  .user-create-form-container {
    width: 60%;
    max-width: 600px;
    margin: auto;
    margin-top: 100px;
    min-width: 300px;
  }
  .user-create-form-container input[type="submit"]{
    margin-top: 20px;
  }
  .recommend-link {
    margin: 50px;
    text-align: center;
  }
  .user-create-form-container .form-group {
    margin-top: 10px;
  }
  .user-create-form-container .form-group input {
    font-size: 20px;
  }
  .user-create-form-container .form-group select {
    font-size: 18px;
    border: none;
    padding: 5px;
    margin-bottom: 5px;
  }
</style>

<style>
  .line-login {
    display: flex;
    justify-content: center;
    margin: auto;
    width: 200px;
    background: #f7f5f5;
    border: 2px solid #ddd;
  }
  .or-login {
    text-align: center;
    font-size: 20px;
    margin: 20px 0px;
  }
  .line-login span {
    margin: auto;
    font-weight: bold;
    color: #333;
  }
  .line-login .line-icon {
    display: flex;
    align-items: center;
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
    margin: auto;
  }
  .line-icon img {
    width: 40px;
    height: 40px;
   }
</style>
