<div class="user-create-form-container">  
  <%= render "shared/error_messages", object: @user %>
  <%= form_with model: @user do |f| %>
    <div>
      <%= f.label :user_name, "ユーザーネーム", class: "form-label" %>
      <%= f.text_field :user_name, class: "form-control" %>
    </div>
    <div>
      <%= f.label :emai, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div>
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div>
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <%= f.submit "登録", class: "form-control btn btn-primary" %>
  <% end %>
</div>

<div class="or-login">
  or
</div>
<div class="line-login">
  <%= link_to auth_at_provider_path(provider: :line), class: "line-icon" do %>
    <%= image_tag "free_images/LINE_Brand_icon.png" %>
  <% end %>
  <span>LINEでログイン</span>
</div>

<div class="recommend-link">
  <p>アカウントをお持ちの方は<%= link_to "こちら", login_path %></p>
</div>

<style>
  .user-create-form-container {
    width: 60%;
    max-width: 600px;
    margin: auto;
    margin-top: 100px;
  }
  .user-create-form-container input[type="submit"]{
    margin-top: 20px;
  }
  .recommend-link {
    margin: 50px;
    text-align: center;
  }
</style>

<style>
  .line-login {
    display: flex;
    justify-content: center;
    margin: auto;
    width: 200px;
    background: #f7f5f5;
    border: 2px solid #ddd;
  }
  .or-login {
    text-align: center;
    font-size: 20px;
    margin: 20px 0px;
  }
  .line-login span {
    margin: auto;
    font-weight: bold;
    color: #333;
  }
  .line-login .line-icon {
    display: flex;
    align-items: center;
    width: 50px;
    height: 50px;
    margin-bottom: 10px;
    margin: auto;
  }
  .line-icon img {
    width: 40px;
    height: 40px;
   }
</style>