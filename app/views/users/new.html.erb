<h1>New User</h1>
<%= render 'shared/error_messages', object: @user %>
<%= form_with model: @user do |f| %>
  <div>
    <%= f.label :user_name, "ユーザーネーム", class:"form-label" %>
    <%= f.text_field :user_name, class:"form-control" %>
  </div>
  <div>
    <%= f.label :emai, "メールアドレス", class:"form-label" %>
    <%= f.email_field :email, class:"form-control" %>
  </div>
  <div >
    <%= f.label :password, "パスワード", class:"form-label" %>
    <%= f.password_field :password, class:"form-control" %>
  </div>
  <div>
    <%= f.label :password_confirmation, "パスワード確認", class:"form-label" %>
    <%= f.password_field :password_confirmation, class:"form-control" %>
  </div>
  <%= f.submit "登録", class: "form-control btn btn-primary" %>
<% end %>
<div>
  <p>ログインは<%= link_to "こちら", login_path %>
</div>
