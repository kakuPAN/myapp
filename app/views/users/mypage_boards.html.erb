<%= render "shared/header" %>
<div class="mypage-wrapper">
  <%= render "mypage_header" %>
  <div class="board-tab">
    <div class="to-all-users-boards <%= "disabled" if @context.to_sym == :bookmarked %>">
      <%= link_to "投稿一覧", all_users_boards_user_path(@user) %>
    </div>
    <div class="to-bookmarked-boards <%= "disabled" if @context.to_sym == :users %>">
      <%= link_to "ブックマーク", bookmarked_boards_user_path(@user) %>
    </div>
  </div>
  <div class="border-label">
    <% if @context.to_sym == :users %>
      <span>すべての投稿</span>
    <% elsif @context.to_sym == :bookmarked %>
      <span>ブックマーク</span>
    <% end %>
  </div>
  <div class="all-users-boards">
    <% if @boards.empty? %>
      <div class="no-content">ボードがありません</div>
    <% else %>
      <% @boards.each do |board| %>
        <%= render "shared/board_card", board: board %>
      <% end %>
    <% end %>
  </div>
  <div class="page-numbers">
    <%= paginate @boards, context: false %>
  </div>
</div>

<style>
.border-label {
    width: 100%;
    height: 100%;
    margin: 20px 0;
    text-align: center;
    background: #FFE8EC;
  }
  .border-label span {
    font-size: 30px;
    font-weight: bold;
    color: rgb(112, 112, 112);
  }
.all-users-boards, .bookmarked-boards {
    display: flex; /* Flexbox を有効化 */
    justify-content: space-between; /* コンテナ内のスペースを均等配置 */
    align-items: center; /* 垂直方向を中央揃え */
    flex-wrap: wrap;
    border-bottom: 3px solid #ddd;
  }

.board-tab {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  gap: 20px;
  width: 100%;
  height: 60px;
  padding: 0 10%;
  position: relative;
}

.to-all-users-boards, .to-bookmarked-boards {
  font-size: 20px;
  min-width: 200px;
  text-align: center;
  border-top: 8px solid pink;
  padding: 10px 0;
}

.to-all-users-boards a, .to-bookmarked-boards a {
  text-decoration: none;
  font-size: 30px;
  font-weight: bold;
  color: rgb(112, 112, 112);
  pointer-events: none;
}
.to-bookmarked-boards.disabled {
  opacity: 0.5;
  border-top: none;
}
.to-bookmarked-boards.disabled a {
  pointer-events: auto;
}
.to-all-users-boards.disabled {
  opacity: 0.5;
  border-top: none;
  pointer-events: auto;
}
.to-all-users-boards.disabled a {
  pointer-events: auto;
}
  </style>

  <style>
  .page-numbers {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 0);
    font-size: 40px;
  }
  .pagination-left {
    position: absolute;
    bottom: 0;
    left: 45%;
    font-size: 40px;
  }
  .pagination-right {
    position: absolute;
    bottom: 0;
    right: 45%;
    font-size: 40px;
  }
  .previous-link {
    font-size: 50px;
    opacity: 1;
    color: pink;
  }
  .next-link {
    font-size: 50px;
    opacity: 1;
    color: pink;
  }
  .previous-link:hover {
    font-size: 60px;
  }
  .next-link:hover {
    font-size: 60px;
  }
  .previous-link.disabled, .next-link.disabled {
    pointer-events: none;
  }
  .board-cards:hover .previous-link:not(.disabled) {
    opacity: 1;
  }
  .board-cards:hover .next-link:not(.disabled) {
    opacity: 1;
  }
</style>
