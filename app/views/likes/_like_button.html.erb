<% if board.liked_by?(current_user) %>
   <%= render "boards/unlike", board: board %>
<% else %>
   <%= render "boards/like", board: board %>
<% end %>

<!-- お気に入りボタン -->
<style>
  .like-button {
   position: absolute;
   right: 100px;
   bottom: 10px;
   z-index: 100;
   border: 2px solid #ddd;
   padding: 5px 10px;
   border-radius: 5px;
   box-shadow: inset 0 -5px 8px rgba(0, 0, 0, 0.1); /* 全体に軽い影 */
  }

  .like-button .unlike span {
    color: gold;
    font-weight: bold;
  }
  .like-button .like span {
   color: #ddd;
   font-weight: bold;
  }
  .like-button a {
    font-size: 20px;
    text-decoration: none;
  }
    
</style>